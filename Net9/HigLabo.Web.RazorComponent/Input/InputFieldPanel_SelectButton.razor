<InputFieldPanel Layout="@Layout" PanelType="select-button" Name="@Name" Text="@Text" FieldNameVisible="@FieldNameVisible">
    <div class="select-button-list-panel">
        @foreach (var item in this.RecordList)
        {
            var cName = "record-value-panel";
            if (object.Equals(item.Value, this.Value))
            {
                cName += " selected";
            }
            <span class="@cName" tabindex="0"
                  @onclick="async e => await RecordValuePanel_Click(item.Value)"
                  @onkeydown="async e => await RecordValuePanel_Keydown(e, item.Value)" @onkeydown:stopPropagation="true">@item.Text</span>
        }
    </div>
</InputFieldPanel>


