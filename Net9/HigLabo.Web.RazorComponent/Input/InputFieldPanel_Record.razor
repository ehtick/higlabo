@typeparam TItem
@typeparam TFilterItem

<InputFieldPanel Layout="@Layout" PanelType="record" Name="@Name" Text="@Text" FieldNameVisible="@FieldNameVisible" ValidateResult="@ValidateResult">
    <div class="current-record-panel" tabindex="0" @ref="this.RecordPanelElementReference"
         @onclick="async e => await this.ToggleVisible()" @onclick:stopPropagation="true"
         @onkeydown="async e => await this.RecordPanel_Keydown(e)">
         @this.ItemTemplate(this.Record)
    </div>
    <div class="select-container-panel">
        @if (this.SelectRecordPanelVisible)
        {
            <SelectRecordPanel State="this.State" FilterItemTemplate="this.FilterItemTemplate"
            TItem="TItem" TFilterItem="TFilterItem" ItemTemplate="this.SelectItemTemplate ?? this.ItemTemplate"
            OnRecordSelected="async r => await Record_Selected(r)"
            OnClosed="async e => await this.OnClosed()"></SelectRecordPanel>
        }
    </div>
</InputFieldPanel>

