<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Version>8.0.1.0</Version>
		<Authors>Higty</Authors>
		<Company>HigLabo</Company>
		<Copyright>Copyright © 2011- HigLabo All Rights Reserved</Copyright>
		<RepositoryUrl>https://github.com/higty/higlabo</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Description>
			How to use? See sample code
			https://github.com/higty/higlabo/blob/master/Net8/HigLabo.Anthropic.SampleConsoleApp/AnthropicClientPlayground.cs
		</Description>
		<PackageTags>Anthropic;Claude;</PackageTags>
		<PackageReadmeFile>\Document\README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\HigLabo.Core\HigLabo.Core.csproj" />
		<ProjectReference Include="..\HigLabo.NewtonsoftJson\HigLabo.NewtonsoftJson.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="Document\README.md">
	    <PackagePath>\</PackagePath>
	    <Pack>true</Pack>
	  </None>
	  <None Update="Image\Rock.jpg">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
